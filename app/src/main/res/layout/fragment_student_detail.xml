<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="0,1">

    <TableRow>

        <TextView
            android:id="@+id/studentFirstNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First name" />

        <EditText
            android:id="@+id/studentFirstNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/studentLastNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name" />

        <EditText
            android:id="@+id/studentLastNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/studentDateOfBirthLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name" />

        <TextView
            android:id="@+id/studentDateOfBirthValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 Jan 2001" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/studentEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last name" />

        <EditText
            android:id="@+id/studentEmailValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </TableRow>

    <TableRow>

        <View>

        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="save" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="cancel" />
        </LinearLayout>
    </TableRow>
</TableLayout>